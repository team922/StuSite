<script type="text/javascript">
    function StartList() {
        var pagesize = getQueryString("pagesize");
        var pageindex = getQueryString("pageindex");
        //alert(getQueryString("type"));
        if (getQueryString("type") == "notice") {
            //alert("notice");
            gettopicnotice();
            GetNoticeList(pagesize, pageindex);
        }
        else {
            //alert("news");
            gettopicnews();
            GetNewsList(pagesize, pageindex);
        }
    }

    function GetList(pageindex) {
        var type = getQueryString("type");
        var pagesize = getQueryString("pagesize");
        window.location.href = "/Home/ShowList?type=" + type + "&pagesize=" + pagesize + "&pageindex=" + pageindex;
    }

    function getQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]); return null;
    }

    function opendetail(o) {
        //alert(o.id);
        //alert(o.className);
        window.open("/Home/ShowDetail" + "?kind=" + o.className + "&id=" + o.id);
        return false;
    }

</script>

